{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2017",
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "composite": false,
        "declarationMap": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "esModuleInterop": true,
        "rootDir": "src",
        "jsx": "react-jsx"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx"
    ]
}
