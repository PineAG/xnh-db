{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2017",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "moduleResolution": "Node",
        "module": "NodeNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@core": ["@xnh-db/core"],
            "@common": ["@xnh-db/common"]
        },
        "rootDir": "./src",
        "outDir": "./dist"
    }
}