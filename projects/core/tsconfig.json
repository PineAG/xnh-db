{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2017",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "moduleResolution": "Node",
        "module": "NodeNext",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@core/*": ["./src/components/*"],
            "@common": ["@xnh-db/common"]
        },
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ],
    "exclude": [
        "./**/*.test.ts"
    ]
}